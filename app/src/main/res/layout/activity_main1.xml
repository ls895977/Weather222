<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="48dp"
            android:gravity="center_vertical"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_am_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/taphome" />

            <TextView
                android:id="@+id/textView_am_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="首页"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed"
            android:layout_width="48dp"
            android:gravity="center_vertical"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_am_write"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tapwriteclicked" />

            <TextView
                android:id="@+id/textView_am_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我有话说"
                android:textColor="#F8F8FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notify"
            android:layout_width="48dp"
            android:gravity="center_vertical"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_am_warning"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tapwarningclicked" />

            <TextView
                android:id="@+id/textView_am_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="灾情报送"
                android:textColor="#F8F8FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine"
            android:layout_width="48dp"
            android:gravity="center_vertical"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_am_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tapusrclicked" />

            <TextView
                android:id="@+id/textView_am_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的"
                android:textColor="#F8F8FF00" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>